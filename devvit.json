{
  "$schema": "https://developers.reddit.com/schema/config-file.v1.json",
  "name": "reflectiq",
  "post": {
    "dir": "dist/client",
    "entrypoints": {
      "default": {
        "entry": "index.html"
      }
    }
  },
  "server": {
    "dir": "dist/server",
    "entry": "index.cjs"
  },
  "media": {
    "dir": "assets"
  },
  "permissions": {
    "redis": true
  },
  "http": {
    "domains": ["example.com", "api.example.com"]
  },
  "menu": {
    "items": [
      {
        "label": "Generate Daily Puzzles",
        "description": "Generate today's three difficulty puzzles (Easy, Medium, Hard)",
        "location": "subreddit",
        "forUserType": "moderator",
        "endpoint": "/internal/menu/generate-daily"
      },
      {
        "label": "Filter: Easy Puzzles",
        "description": "Navigate to Easy difficulty puzzles",
        "location": "subreddit",
        "forUserType": "moderator",
        "endpoint": "/internal/menu/filter-easy"
      },
      {
        "label": "Filter: Medium Puzzles",
        "description": "Navigate to Medium difficulty puzzles",
        "location": "subreddit",
        "forUserType": "moderator",
        "endpoint": "/internal/menu/filter-medium"
      },
      {
        "label": "Filter: Hard Puzzles",
        "description": "Navigate to Hard difficulty puzzles",
        "location": "subreddit",
        "forUserType": "moderator",
        "endpoint": "/internal/menu/filter-hard"
      },
      {
        "label": "View Yesterday's Leaderboard",
        "description": "Show leaderboard results for yesterday's puzzles",
        "location": "subreddit",
        "forUserType": "moderator",
        "endpoint": "/internal/menu/yesterday-leaderboard"
      }
    ]
  },
  "triggers": {
    "onAppInstall": "/internal/on-app-install",
    "onCommentCreate": "/internal/on-comment-create"
  },
  "dev": {
    "subreddit": "reflectiq_dev"
  }
}
