{
  "$schema": "https://developers.reddit.com/schema/config-file.v1.json",
  "name": "reflectiq",
  "post": {
    "dir": "dist/client",
    "entrypoints": {
      "default": {
        "entry": "index.html",
        "height": "tall"
      }
    }
  },
  "server": {
    "dir": "dist/server",
    "entry": "index.cjs"
  },
  "media": {
    "dir": "assets"
  },
  "permissions": {
    "redis": true,
    "reddit": {
      "enable": true,
      "asUser": ["SUBMIT_POST", "SUBMIT_COMMENT"]
    }
  },
  "scheduler": {
    "tasks": {
      "daily-puzzle-generation": {
        "endpoint": "/internal/scheduler/generate-puzzles",
        "cron": "0 0 * * *"
      },
      "daily-puzzle-post": {
        "endpoint": "/internal/scheduler/post-daily-puzzle",
        "cron": "5 0 * * *"
      },
      "daily-leaderboard-post": {
        "endpoint": "/internal/scheduler/post-leaderboard",
        "cron": "0 1 * * *"
      },
      "weekly-maintenance": {
        "endpoint": "/internal/scheduler/weekly-maintenance",
        "cron": "0 2 * * 0"
      }
    }
  },
  "menu": {
    "items": [
      {
        "label": "üéØ Create Daily Puzzle Set",
        "description": "Create 3 puzzle posts (Easy/Medium/Hard) + yesterday's leaderboard",
        "location": "subreddit",
        "forUserType": "moderator",
        "endpoint": "/internal/menu/post-create"
      },
      {
        "label": "üìä Daily Leaderboard",
        "description": "View today's puzzle leaderboard",
        "location": "subreddit",
        "forUserType": "moderator",
        "endpoint": "/internal/menu/leaderboard"
      },
      {
        "label": "üèÜ Weekly Leaderboard",
        "description": "View this week's top performers",
        "location": "subreddit",
        "forUserType": "moderator",
        "endpoint": "/internal/menu/weekly-leaderboard"
      }
    ]
  },
  "triggers": {
    "onAppInstall": "/internal/on-app-install",
    "onPostSubmit": "/internal/triggers/post-submit",
    "onCommentSubmit": "/internal/triggers/comment-submit"
  },
  "marketingAssets": {
    "icon": "assets/RQ-icon.png"
  }
}
