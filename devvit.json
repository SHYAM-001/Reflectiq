{
  "$schema": "https://developers.reddit.com/schema/config-file.v1.json",
  "name": "reflectiq",
  "post": {
    "dir": "dist/client",
    "entrypoints": {
      "default": {
        "entry": "index.html"
      }
    }
  },
  "server": {
    "dir": "dist/server",
    "entry": "index.cjs"
  },
  "media": {
    "dir": "assets"
  },
  "permissions": ["redis", "posts", "comments", "users", "moderation"],
  "menu": {
    "items": [
      {
        "label": "Create Logic Reflections Puzzle",
        "description": "Create a new daily puzzle post",
        "location": "subreddit",
        "forUserType": "moderator",
        "endpoint": "/internal/menu/post-create"
      },
      {
        "label": "Generate Daily Puzzles",
        "description": "Generate today's three difficulty puzzles",
        "location": "subreddit",
        "forUserType": "moderator",
        "endpoint": "/internal/menu/generate-daily"
      }
    ]
  },
  "triggers": {
    "onAppInstall": "/internal/on-app-install",
    "onCommentCreate": "/internal/on-comment-create"
  },
  "dev": {
    "subreddit": "reflectiq_dev"
  }
}
